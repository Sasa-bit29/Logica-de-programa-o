programa {
  funcao inicio() {
    inteiro numero, fatorial, contador 

    escreva ("Informe um número para calcular o fatorial: \n")
    leia (numero)

    fatorial = 1 
    para (contador = 1; contador <= numero; contador++){
      fatorial = fatorial * contador 
      }

      escreva ("O fatorial de ", numero, " é: ", fatorial)
  }
}
