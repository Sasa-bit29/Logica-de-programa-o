programa {
  funcao inicio() {
    real base, resultado
    inteiro expoente, contador

    escreva("Digite a base:\n")
    leia(base)

    escreva("Digite o expoente:\n")
    leia(expoente)

    resultado = 1

    para (contador = 1; contador <= expoente; contador++) {
      resultado = resultado * base
    }

    escreva(base, " elevado a ", expoente, " Ã©: ", resultado, "\n")
    
  }
}
