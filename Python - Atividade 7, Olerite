nome = input("Digite o nome: ")
salario = float(input("Digite o salário: "))
inss = salario * 0.1 
vt = salario * 0.06
salario_liquido = salario - inss - vt

print ("\n")

print ("Digite o nome do funcionário: ", nome)
print ("Salário: ", salario)
print ("INSS: ", inss)
print ("VT: ", vt)
print ("Salário líquido: ", salario_liquido )
